@model Banco_Amigo.Models.ba_persona

<h2>Nuevo Usuario</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Inserte los datos correspondientes para registrar un nuevo usuario</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <!--div class="form-group">
            @Html.LabelFor(model => model.pe_idpersona, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.pe_idpersona, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pe_idpersona, "", new { @class = "text-danger" })
            </div>
        </!--div-->
        @if (ViewData["Mensaje"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewData["Mensaje"]
            </div>
        }

        <div class="form-group">
            @Html.LabelFor(model => model.pe_cedula, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.pe_cedula, new { htmlAttributes = new { @class = "form-control", type = "number", max = 9999999999 } })
                @Html.ValidationMessageFor(model => model.pe_cedula, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.pe_nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.pe_nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pe_nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.pe_apellido, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.pe_apellido, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pe_apellido, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.pe_fecha_nacimiento, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.pe_fecha_nacimiento, new { htmlAttributes = new { @class = "form-control", type = "Date" } })
                @Html.ValidationMessageFor(model => model.pe_fecha_nacimiento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.pe_direccion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.pe_direccion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pe_direccion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.pe_sexo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.ValidationMessageFor(model => model.pe_sexo, "", new { @class = "text-danger" })
                @Html.DropDownListFor(model => model.pe_sexo,
                    new SelectList(Enum.GetValues(typeof(Banco_Amigo.Models.ba_persona.Genero))),
                    "Selecciona el Genero",
                    new { @class = "form-control" } )
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.pe_correo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.pe_correo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pe_correo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="lbl_Usuario">Usuario</label>
            <div class="col-md-10">
                <input class="form-control text_box single_line" id="txt_usuario" name="txt_usuario" type="text" value="">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="lbl_Clave">Contraseña</label>
            <div class="col-md-10">
                <input class="form-control text_box single_line" id="txt_clave" name="txt_clave" type="password" value="">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="lbl_Clave2">Confirma la contraseña</label>
            <div class="col-md-10">
                <input class="form-control text_box single_line" id="txt_ConfirmarClave" name="txt_ConfirmarClave" type="password" value="">
            </div>
        </div>

        <!--div class="form-group">
            @Html.LabelFor(model => model.pe_estado, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.pe_estado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pe_estado, "", new { @class = "text-danger" })
            </div>
        </!--div-->

        <div class="form-group">
            <label class="control-label col-md-2" for="lbl_Usuario">Preguntas de Seguridad</label>
            <div class="col-md-10">
                @Html.DropDownList("pregunta1", null, htmlAttributes: new { @class = "form-control" })
                <input class="form-control text_box single_line" id="txt_respuesta1" name="txt_respuesta1" type="text" value="">
            </div>
            <div class="col-md-10">
                @Html.DropDownList("pregunta2", null, htmlAttributes: new { @class = "form-control" })
                <input class="form-control text_box single_line" id="txt_respuesta2" name="txt_respuesta2" type="text" value="">
            </div>
            <div class="col-md-10">
                @Html.DropDownList("pregunta3", null, htmlAttributes: new { @class = "form-control" })
                <input class="form-control text_box single_line" id="txt_respuesta3" name="txt_respuesta3" type="text" value="">
            </div>
            <div class="col-md-10">
                @Html.DropDownList("pregunta4", null, htmlAttributes: new { @class = "form-control" })
                <input class="form-control text_box single_line" id="txt_respuesta4" name="txt_respuesta4" type="text" value="">
            </div>
            <div class="col-md-10">
                @Html.DropDownList("pregunta5", null, htmlAttributes: new { @class = "form-control" })
                <input class="form-control text_box single_line" id="txt_respuesta5" name="txt_respuesta5" type="text" value="">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="crear" type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Login")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}