@model Banco_Amigo.Models.ba_usuarios

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cambio de Clave</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.us_idusuario)

        @if (ViewData["Mensaje"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewData["Mensaje"]
            </div>
        }

        <div class="form-group">
            @Html.LabelFor(model => model.us_clave, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.us_clave, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.us_clave, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="lbl_NuevaClave">Nueva Clave</label>
            <div class="col-md-10">
                <input class="form-control text_box single_line" id="txt_nuevaclave" name="txt_nuevaclave" type="password" value="">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="lbl_ConfirmarClave">Confirmar Clave</label>
            <div class="col-md-10">
                <input class="form-control text_box single_line" id="txt_confirmarclave" name="txt_confirmarclave" type="password" value="">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar al Login", "Login")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}