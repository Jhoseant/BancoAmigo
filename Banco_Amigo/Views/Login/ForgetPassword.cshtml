@model IEnumerable<Banco_Amigo.Models.ba_respuestausuario>

@{
    ViewBag.Title = "Olvido de Contraseña";
}

<h2>Olvido de Contraseña</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Porfavor responda a las preguntas de seguridad</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @if (ViewData["Mensaje"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewData["Mensaje"]
            </div>
        }

        <div class="form-group">
            <label class="control-label col-md-2" for="lbl_pregunta1" value="lbl_pregunta1">@ViewData["lbl_pregunta1"]</label>
            <div class="col-md-10">
                <input class="form-control text_box single_line" id="txt_respesta1" name="txt_respuesta1" type="text" value="">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="lbl_pregunta2" value="lbl_pregunta2">@ViewData["lbl_pregunta2"]</label>
            <div class="col-md-10">
                <input class="form-control text_box single_line" id="txt_respesta2" name="txt_respuesta2" type="text" value="">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="lbl_pregunta3" value="lbl_pregunta3">@ViewData["lbl_pregunta3"]</label>
            <div class="col-md-10">
                <input class="form-control text_box single_line" id="txt_respesta3" name="txt_respuesta3" type="text" value="">
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="aceptar" type="submit" value="Aceptar" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Volver", "Login")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
} 